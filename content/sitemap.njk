# Sitemap - Generated automatically by Eleventy
# This file is a template that generates sitemap.xml

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for page in collections.all %}
{%- if page.url and not page.data.excludeFromSitemap %}
  <url>
    <loc>{{ site.base_url }}{{ page.url }}</loc>
    <lastmod>{{ page.date | dateToISO }}</lastmod>
    <changefreq>{{ page.data.changefreq | default("monthly") }}</changefreq>
    <priority>{{ page.data.priority | default("0.5") }}</priority>
  </url>
{%- endif %}
{%- endfor %}
</urlset>
